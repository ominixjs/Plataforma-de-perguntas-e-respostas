<body>
  <%- include ("./partials/navbar.ejs"); %>
  <br />
  <div class="container">
    <div class="card" id="form_perguntas">
      <div class="card-header"><h3>Realizar perguntas</h3></div>

      <div class="card-body">
        <form method="POST" action="/salvarpergunta">
          <label class="form-label">Titulo</label>
          <input
            type="text"
            placeholder="Titulo"
            name="titulo"
            class="form-control"
          />
          <br /><label class="form-label">Descrição</label>
          <textarea
            placeholder="Escreva sua pergunta"
            class="form-control"
            name="descricao"
          ></textarea>
          <br />
          <button class="btn btn-primary">Perguntar</button>
        </form>
      </div>
    </div>
  </div>
</body>
